@model unipaulistana.model.Login

@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>SAC - Login</title>
	<link type="text/css" href="@Url.Content("~/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
	<link type="text/css" href="@Url.Content("~/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet">
	<link type="text/css" href="@Url.Content("~/css/theme.css")" rel="stylesheet">
	<link type="text/css" href="@Url.Content("~/images/icons/css/font-awesome.css")" rel="stylesheet">
	<link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600' rel='stylesheet'>
</head>
<body>

	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
					<i class="icon-reorder shaded"></i>
				</a>

			  	<a class="brand" href="@Url.Action("Index", "Home")">
			  		FINANCEIRO - Sistema de controle financeiro
			  	</a>

					</div>
		</div>
	</div>



	<div class="wrapper">
		<div class="container">
			<div class="row">
				<div class="module module-login span4 offset4">
					<form  asp-action="Index" class="form-vertical">
						<div class="module-head">
							<h3>Entre com os seus dados de acesso</h3>
						</div>
							@if(TempData["UserLoginFailed"] != null){
								<p style="color:red;">email ou senha inválida</p>
							}
						<div class="module-body">
							<div class="control-group">
								<div class="controls row-fluid">
									<input asp-for="Email" class="span12" type="text" id="inputEmail" placeholder="email">
									<span asp-validation-for="Email" class="text-danger"></span>
								</div>
							</div>
							<div class="control-group">
								<div class="controls row-fluid">
									<input asp-for="Senha" class="span12" type="password" id="inputPassword" placeholder="senha">
									<span asp-validation-for="Senha" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="module-foot">
							<div class="control-group">
								<div class="controls clearfix">
									<button type="submit" class="btn btn-primary pull-right">Acessar</button>
									<label class="checkbox">
										<input type="checkbox"> Lembre-me
									</label>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div><!--/.wrapper-->

	<div class="footer">
		<div class="container">
			 

			<b class="copyright">&copy; 2018 SAC - http://www.unipaulistana.edu.br/ </b> Todos os direitos reservados.
		</div>
	</div>

	<script src="@Url.Content("~/js/jquery-1.9.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/js/jquery-ui-1.10.1.custom.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}