@model unipaulistana.model.NovaSenhaAlteradaPorAdmin

<br/>
<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br/>

@Html.Partial("_ErrorSummary")

<div class="content">
	<div class="module">
		<div class="module-head">
			<h3>Atualizar senha</h3>
		</div>
		<div class="module-body">
			<form asp-action="AlterarSenhaViaAdmin" class="form-horizontal row-fluid">
                
                <input type="hidden" asp-for="UserID" />
                <div class="control-group">
					<label class="control-label" asp-for="Senha">Senha</label>
					<div class="controls">
						<input type="password" asp-for="Senha" type="text" id="basicinput" placeholder="senha" class="span8">
						<span asp-validation-for="Senha" class="text-danger"></span>
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<button type="submit" class="btn">Salvar</button>
					</div>
				</div>
			</form>
		</div>
	</div>				
</div><!--/.content-->
		
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
