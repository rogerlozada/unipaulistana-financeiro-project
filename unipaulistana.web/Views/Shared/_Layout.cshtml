@using unipaulistana.web.extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SAC - Sistema de atendimento ao cliente</title>

        <link type="text/css" href="@Url.Content("~/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
        <link type="text/css" href="@Url.Content("~/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet">
        <link type="text/css" href="@Url.Content("~/css/theme.css")" rel="stylesheet">
        <link type="text/css" href="@Url.Content("~/images/icons/css/font-awesome.css")" rel="stylesheet">
        <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600' rel='stylesheet'>
</head>

	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
					<i class="icon-reorder shaded"></i>
				</a>

			  	<a class="brand" href="@Url.Action("Dashboard", "Home")">
			  		SAC - Sistema de atendimento ao cliente
			  	</a>

				<div class="nav-collapse collapse navbar-inverse-collapse">
				
					<ul class="nav pull-right">
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Menu <b class="caret"></b></a>
							<ul class="dropdown-menu">
								
								@if(User.HasPermission("PermiteListarUsuario"))
								{
									<li><a href="@Url.Action("Index", "Usuario")">Usuários</a></li>
								}
								
								@if(User.HasPermission("PermiteListarCliente"))
								{
									<li><a href="@Url.Action("Index", "Cliente")">Clientes</a></li>
								}

								@if(User.HasPermission("PermiteListarDepartamento"))
								{
									<li><a href="@Url.Action("Index", "Departamento")">Departamento</a></li>
								}
								
								@if(User.HasPermission("PermiteListarGrupoDeSeguranca"))
								{
									<li><a href="@Url.Action("Index", "GrupoDeSeguranca")">Grupo de segurança</a></li>
								}

								@if(User.HasPermission("PermiteListarSolicitacao"))
								{
									<li><a href="@Url.Action("Index", "Solicitacao")">Solicitação</a></li>
								}
							</ul>
						</li>
				
						<li class="nav-user dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								<img src="@Html.Raw(Url.Content("~/images/" + @User.GetPicture()))" class="nav-avatar" />
								<b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li><a href="@Url.Action("ImagemUsuario", "Usuario")">Alterar foto</a></li>
								<li><a href="@Url.Action("NovaSenha", "Usuario")">Alterar senha</a></li>
								<li class="divider"></li>
								<li><a href="@Url.Action("Logout","Home")">Sair</a></li>
							</ul>
						</li>
					</ul>
				</div><!-- /.nav-collapse -->
			</div>
		</div><!-- /navbar-inner -->
	</div><!-- /navbar -->

<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; SAC 2018 - unipaulistana/4° Semestre</p>
        </footer>
    </div>

  
    @RenderSection("Scripts", required: false)
</body>
</html>

<script src="@Url.Content("~/js/jquery-1.9.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/js/jquery-ui-1.10.1.custom.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/js/flot/jquery.flot.js")" type="text/javascript"></script>
<script src="@Url.Content("~/js/flot/jquery.flot.resize.js")" type="text/javascript"></script>
<script src="@Url.Content("~/js/datatables/jquery.dataTables.js")" type="text/javascript"></script>
<script src="@Url.Content("~/js/common.js")" type="text/javascript"></script>



